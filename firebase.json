{
  "hosting": [
    {
      "public": "build",
      "target": "production",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [ {
        "source": "**/*",
        "headers": [ {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        } ]
      }]
    },
    {
      "public": "build",
      "target": "staging",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [ {
        "source": "**/*",
        "headers": [ {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        } ]
      }]
    }
  ]
}
